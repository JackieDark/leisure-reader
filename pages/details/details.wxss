/* pages/details/details.wxss */
.background {
  width: 100%;
  border-bottom: 1px #eee solid;
}

.background .top {
  background-color: #cb1c36; 
  width: 100%;
  height: 150rpx;
}

.background .bottom {
  background-color: #fff; 
  width: 100%;
  height: 400rpx;
}

.bookInfo {
  display: flex;
  justify-content: center;
  flex-direction: column;
  position: absolute;
  top: 10rpx;
}

.bookInfo image {
  width: 250rpx;
  height: 350rpx;
  margin: 0 auto;
  box-shadow: 0 2px 5px 0 #888;
}

.bookTitle {
  color: #11212e;
  font-size: 18px;
  font-weight: bold;
  text-align: center;
  display: block;
  margin-top: 20rpx;
}

.bookSite {
  color: #999;
  font-size: 15px;
  text-align: center;
   display: block;
   margin: 20rpx 0;
}

.infoBtn {
  display: flex;
  justify-content: space-around;
}

.startRead,.addReader {
  width: 250rpx;
  line-height: 80rpx;
  font-size: 15px;
  border-radius: 50rpx;
}

.startRead {
  background-color: #ec304c;
  box-shadow: 0 0 5px 0 #ec304c;
  color: #f2f2f2;
  margin-right: 35rpx;
}

.addReader {
  background-color: #fff;
  box-shadow: 0 0 5px 0 #aaa;
  color: #999;
  margin-left: 35rpx;
}